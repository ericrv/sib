<!DOCTYPE html>
<html>
<head>
  <title>Centre SiB</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class='container'>
        <div class="header row hidden-xs hidden-sm">
          <div class='col-xs-12 col-sm-12 col-md-12 col-lg-12'>
            
            <%= link_to image_tag("logo.png", alt: "logo"), root_path, id: "logo" %>
            <div class="contacte">
              <p>info@sibfisioterapia.com</p>
              <p>872 037 097 - 626 530 484</p>
              <p>C/ Cristòfol Grober 6, 1er 2a 17001 Girona</p>
            </div>
          </div>
        </div>

        <div class='row'>
          <div class="visible-xs visible-sm">
              <nav class="navbar navbar-default" role="navigation">
              <div class="overflow">
                
                <%= link_to image_tag("logo.png", alt: "logo"), root_path, class: "navbar-brand" %>
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle" data-toggle="collapse"
                        data-target=".navbar-collapse">Menu</button>
                    
                </div>
              </div>
                 
                <div class="navbar collapse navbar-collapse">
                  <ul class='nav navbar-nav navbar-center'>
                    <li><%= link_to_unless_current "INICI", root_path %></li>
                    <li><%= link_to_unless_current "QUI SOM", qui_som_path %>
                    <li><%= link_to_unless_current "TRACTAMENTS", tractaments_path %></li>
                    <li><%= link_to_unless_current "READAPTACIÓ ESPORTIVA", readaptacio_esportiva_path %></li>
                    <li><%= link_to_unless_current "GIMNÀSTICA HIPOPRESSIVA", gimnastica_hipopressiva_path %></li>
                    <li><%= link_to_unless_current "CONTACTE", contacte_path %></li>
                    <li class="noticies"><%= link_to_unless_current "NOTÍCIES", articles_path %></li>
                  </ul>
                </div>
              </nav>
          </div>

          <div class=" col-xs-12 col-sm-12 col-md-12 col-lg-12 visible-md visible-lg">
              <ul class='nav navbar-nav navbar-center'>
                <li><%= link_to_unless_current "INICI", root_path %></li>
                <li><%= link_to_unless_current "QUI SOM", qui_som_path %>
                <li><%= link_to_unless_current "TRACTAMENTS", tractaments_path %></li>
                <li><%= link_to_unless_current "READAPTACIÓ ESPORTIVA", readaptacio_esportiva_path %></li>
                <li><%= link_to_unless_current "GIMNÀSTICA HIPOPRESSIVA", gimnastica_hipopressiva_path %></li>
                <li><%= link_to_unless_current "CONTACTE", contacte_path %></li>
                <li class="noticies"><%= link_to_unless_current "NOTÍCIES", articles_path %></li>
            </ul>
          </div>
        </div>
				
				<%= yield %>


		<div class='row'>
          <div class='peu col-xs-6 col-sm-6 col-md-3 col-lg-2'>
            <p>© 2014 - SiB Fisioteràpia</p>
          </div>
          <div class='politica col-xs-6 col-sm-6 col-md-offset-6 col-md-3 col-lg-offset-7 col-lg-3'>
            <p>Politica de privacitat. Crèdits</p>
          </div>
        </div>
    </div>

</body>
</html>
